@{
    ViewData["Title"] = "Dashboard";
}

@section CSS {
    <link rel="stylesheet" href="/css/dashboard.css?v3" />
}

@section dashboard_link{
    my_navlink-active
}

<div class="container-fluid py-4" style="color: black;">
    <div class="row" style="--bs-gutter-y: 1rem">
        <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Numbers of task managers</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @ViewBag.numberofmanagers
                                    <span class="text-success text-sm font-weight-bolder">@ViewBag.onlineManagers Active</span>
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md smallicon">
                                <i class="fa fa-users opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Numbers of annotators</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @ViewBag.numberofannotators
                                    <span class="text-success text-sm font-weight-bolder">@ViewBag.onlineAnnotators Active</span>
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md smallicon">
                                <i class="fa fa-users opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Numbers of task</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @ViewBag.numberoftasks
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md smallicon">
                                <i class="fa fa-inbox opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Number of tasks completed</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @ViewBag.numberofcompletedtask
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md smallicon">
                                <i class="ni ni-check-bold text-lg opacity-10" aria-hidden="true" style="font-weight: bolder"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Number of tasks in process</p>
                                <h5 class="font-weight-bolder mb-0 ">
                                    @ViewBag.numberoftaskinprosses
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md smallicon">
                                <i class="ni ni-user-run text-lg opacity-10" aria-hidden="true" style="font-weight: bolder"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Number of awaiting tasks</p>
                                <h5 class="font-weight-bolder mb-0 ">
                                    @ViewBag.numberoftaskWaiting
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md smallicon">
                                <i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4" style=" margin-bottom: 6.5px !important">
        <div class="col-md-6 mb-lg-0 mb-4">
            <div class="card z-index-2">
                <div class="card-body p-3">
                    <div class="bg-gradient-dark border-radius-lg py-3 pe-1 mb-3" style="text-align: center; background-image: linear-gradient(310deg, black -125%, #ded9d9 75%);">
                        <div class="pie" style="--p: @ViewBag.lastday; --c: rgb(117 20 20); --b: 10px; color: rgb(117 20 20); ">@ViewBag.lastday%</div>
                        <div class="pie" style="--p: @ViewBag.lastweek; --c: #520f0f; --b: 10px; color: #520f0f ">@ViewBag.lastweek%</div>
                        <div class="pie" style="--p: @ViewBag.lastmonth;--c:black;--b:10px;color:black">@ViewBag.lastmonth%</div>
                    </div>
                    <h6 class="ms-2 mt-4 mb-0" style=" color: rgb(150, 41, 65); font-weight: bolder;font-size: 20px;">Annotation information</h6>
                    <p class="text-sm ms-2 " style=" color: rgb(150, 41, 65)">Number of records that were served</p>
                    <div class="row">
                        <div class="col-4 py-4 ps-0">
                            <div class="charticon" style="">
                                <div class="icon icon-shape icon-xxs shadow border-radius-sm bg-gradient-danger text-center me-2 d-flex align-items-center justify-content-center" style="background-image: linear-gradient(310deg, rgb(117 20 20) 60%, bisque 100%) !important; color: rgb(117 20 20) ">
                                    .
                                </div>
                                <p class="text-xs mt-1 mb-0 font-weight-bold">
                                    last day
                                </p>
                            </div>
                        </div>
                        <div class="col-4 py-4 ps-0">
                            <div class="charticon">
                                <div class="icon icon-shape icon-xxs shadow border-radius-sm bg-gradient-danger text-center me-2 d-flex align-items-center justify-content-center" style="background-image: linear-gradient(310deg, #520f0f 60%, bisque 100%) !important; color: #520f0f ">
                                    .
                                </div>
                                <p class="text-xs mt-1 mb-0 font-weight-bold">
                                    last week
                                </p>
                            </div>
                        </div>
                        <div class="col-4 py-4 ps-0">
                            <div class="charticon">
                                <div class="icon icon-shape icon-xxs shadow border-radius-sm bg-gradient-danger text-center me-2 d-flex align-items-center justify-content-center" style="background-image: linear-gradient(310deg, black 60%, bisque 100%) !important; color: black ">
                                    .
                                </div>
                                <p class="text-xs mt-1 mb-0 font-weight-bold">
                                    last month
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card z-index-2">
                <div class="card-header pb-0">
                    <h6>Tasks added in the last week</h6>
                </div>
                <div class="card-body p-3">
                    <div class="chart">
                        <canvas id="chart-line" class="chart-canvas" height="600" width="1307" style="display: block; box-sizing: border-box; height: 300px; width: 653.5px;"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="ps__rail-x" style="left: 0px; bottom: -396px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div>

        <div class="ps__rail-y" style="top: 396px; height: 722px; right: 0px;"><div class="ps__thumb-y" tabindex="0" style="top: 170px; height: 310px;"></div></div>
    </div>
