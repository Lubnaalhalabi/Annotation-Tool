<script>
    let classes = [];
</script>
<!--Tagging-->
@if (@ViewBag.taskType == 1)
{
    <script>
        const textToMark = document.getElementById("textToMark");
        const clearButton = document.getElementById("clearButton");

        let lastSelectedColor = "unset";
        let lastSelectedClass = "_";

        function updateLastSelectedColor(event) {
            @if (ViewBag.classesType == 1)
            {
                <text>
                if (lastSelectedClass != event.target.id.split("colorBtn-")[1])
                    clearMarks();
                </text>
            }

            lastSelectedColor = event.target.value;
            lastSelectedClass = event.target.id.split("colorBtn-")[1];
        }

        function fillClasses() {

        }

        var colorInputs = document.getElementsByClassName('color-input');
        for (let i = 0; i < colorInputs.length; i++) {
            colorInputs[i].addEventListener('input', updateLastSelectedColor);
        }

        function markText() {
            const selection = window.getSelection();
            if (!selection.isCollapsed) {
@*                var colorInputs = document.getElementsByClassName('color-input');
                for (let i = 0; i < colorInputs.length; i++) {
                    colorInputs[i].addEventListener('input', updateLastSelectedColor);
                }*@

                if (lastSelectedColor != "unset") {
                    const range = selection.getRangeAt(0);
                    const mark = document.createElement("mark");
                    mark.style.backgroundColor = lastSelectedColor;
                    range.surroundContents(mark);

                    // Get the start and end indices of the selected text within the whole text content
                    const allText = textToMark.textContent.trim();
                    const selectedText = selection.toString().trim();
                    const start = allText.indexOf(selectedText);
                    const end = start + selectedText.length;
                    classes.push(start + ',' + end + "#" + lastSelectedClass);

                    selection.removeAllRanges();
                }
            }
        }

        function clearMarks() {
            classes = [];
            const marks = document.getElementsByTagName("mark");
            while (marks.length > 0) {
                const parent = marks[0].parentNode;
                const textNode = document.createTextNode(marks[0].textContent);
                parent.replaceChild(textNode, marks[0]);
            }
        }
        textToMark.addEventListener("mouseup", markText);
        textToMark.addEventListener("touchend", markText);
        clearButton.addEventListener("click", clearMarks);
    </script>

}
